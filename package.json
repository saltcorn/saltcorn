{
  "name": "saltcorn-monorepo",
  "private": true,
  "devDependencies": {
    "jest": "^29.7.0",
    "minipass": "3.1.6",
    "supertest": "7.0.0",
    "typedoc": "^0.28.11",
    "typescript": "5.9.2"
  },
  "scripts": {
    "dev": "nodemon packages/saltcorn/index.js",
    "test": "jest",
    "tsc": "tsc --build && node ./packages/saltcorn-data/mobile-mocks/copy_excluded_files.js",
    "clean": "tsc --build --clean",
    "docs": "typedoc --options typedoc_cfg.json",
    "jsondocs": "typedoc --json packages/server/docs.json --options typedoc_cfg.json"
  },
  "jest": {
    "testEnvironment": "node",
    "projects": [
      "packages/saltcorn-markup",
      "packages/saltcorn-data",
      "packages/saltcorn-sbadmin2"
    ]
  },
  "nodemonConfig": {
    "verbose": true,
    "ext": "js,json,css",
    "ignore": [
      "plugin_packages/",
      "plugins_folder/",
      "git_plugins/",
      "packages/saltcorn-data/app-locales/",
      "packages/server/locales/"
    ]
  },
  "eslintConfig": {
    "ignorePatterns": [
      "**/plugin_packages/**",
      "**/plugins_folder/**",
      "packages/server/public/**",
      "**/dist/**",
      "*.test.js",
      "packages/filemanager/public/build/bundle.js",
      "packages/saltcorn-sbadmin2/public/**",
      "packages/saltcorn-builder/**",
      "docs/**",
      "deploy/"
    ],
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2021
    },
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "no-unused-vars": "off",
      "no-case-declarations": "off",
      "no-empty": "warn",
      "no-control-regex": "off",
      "no-fallthrough": "warn"
    }
  },
  "overrides": {
    "immer": "9.0.6",
    "undici": "7.12.0",
    "node-gyp": ">=10.2.0",
    "glob": ">=9.3.5",
    "parse5": "7.2.1",
    "parse5-htmlparser2-tree-adapter": "7.0.0",
    "typescript": "5.9.2",
    "htmlnano": "2.1.1"
  },
  "workspaces": [
    "./packages/*"
  ]
}
