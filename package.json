{
  "name": "saltcorn-monorepo",
  "private": true,
  "devDependencies": {
    "jest": "^27.1.0",
    "lerna": "^3.20.2",
    "supertest": "^4.0.2",
    "typedoc": "^0.22.11",
    "typescript": "^4.4.4"
  },
  "scripts": {
    "dev": "nodemon packages/saltcorn/index.js",
    "test": "jest",
    "tsc": "tsc --build",
    "clean": "tsc --build --clean",
    "docs": "typedoc --options typedoc_cfg.json"
  },
  "jest": {
    "testEnvironment": "node",
    "projects": [
      "packages/saltcorn-markup",
      "packages/saltcorn-data",
      "packages/saltcorn-sbadmin2"
    ]
  },
  "workspaces": [
    "./packages/*"
  ],
  "nodemonConfig": {
    "verbose": true,
    "ext": "js,json,css",
    "ignore": [
      "plugin_packages/",
      "git_plugins/",
      "packages/saltcorn-data/app-locales/",
      "packages/server/locales/"
    ]
  }
}
