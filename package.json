{
  "name": "saltcorn-monorepo",
  "private": true,
  "devDependencies": {
    "jest": "^27.1.0",
    "minipass": "3.1.6",
    "supertest": "^6.3.3",
    "typedoc": "^0.22.11",
    "typescript": "^4.4.4"
  },
  "scripts": {
    "dev": "nodemon packages/saltcorn/index.js",
    "test": "jest",
    "tsc": "tsc --build",
    "clean": "tsc --build --clean",
    "docs": "typedoc --options typedoc_cfg.json"
  },
  "jest": {
    "testEnvironment": "node",
    "projects": [
      "packages/saltcorn-markup",
      "packages/saltcorn-data",
      "packages/saltcorn-sbadmin2"
    ]
  },
  "workspaces": [
    "./packages/*"
  ],
  "nodemonConfig": {
    "verbose": true,
    "ext": "js,json,css",
    "ignore": [
      "plugin_packages/",
      "git_plugins/",
      "packages/saltcorn-data/app-locales/",
      "packages/server/locales/"
    ]
  },
  "eslintConfig": {
    "ignorePatterns": [
      "**/plugin_packages/**",
      "packages/server/public/**",
      "**/dist/**",
      "*.test.js",
      "packages/filemanager/public/build/bundle.js",
      "docs/**"
    ],
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2021
    },
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "no-unused-vars": "off",
      "no-case-declarations": "off",
      "no-empty": "warn",
      "no-fallthrough": "warn"
    }
  },
  "overrides": {
    "immer": "9.0.6"
  }
}
