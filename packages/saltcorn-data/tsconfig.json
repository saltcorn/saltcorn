{
  "compilerOptions": {
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "./dist",
    "allowJs": true,
    "sourceMap": true,
    "composite": true,
    "declaration": true /* set to true by "composite" */,
    "declarationMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true /* set to true by "esModuleInterop" and "module" */,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    /* https://github.com/microsoft/TypeScript/wiki/Node-Target-Mapping */
    "lib": ["ES2021", "dom"],
    "types": ["node", "estree"],
    "module": "commonjs",
    "target": "ES2021"
  },
 "include": [
    "**/*",
    "**/*.json"
  ],

  "exclude": [
    "node_modules",
    "dist/**",
    "webpack.config.js",
    "./mobile-mocks/node/vm.js",
    "**/*.test.*",
    "**/*.spec.*",
    "**/__tests__/**"
  ]
}

