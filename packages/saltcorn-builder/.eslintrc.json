{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },

    // typescript-eslint specific options
    "warnOnUnsupportedTypeScriptVersion": true
  },
  "env": {
    "browser": true
  },
  "ignorePatterns": ["dist/**"],
  "rules": {
    "no-unused-vars": "off",
    "no-case-declarations": "off",
    "no-empty": "warn",
    "no-fallthrough": "warn"
  }
}
