{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "env": {
    "browser": true
  },
  "ignorePatterns": ["public/**"],
  "rules": {
    "no-unused-vars": "off",
    "no-case-declarations": "off",
    "no-empty": "warn",
    "no-fallthrough": "warn"
  }
}
