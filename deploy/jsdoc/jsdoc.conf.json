{
  "opts": {
    "template": "node_modules/better-docs",
    "recurse": true,
    "destination": "./docs/"
  },

  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "search": true,
    "better-docs": {
      "css": "jsdoc.styles.css",
      "title": "Saltcorn",
      "hideGenerator": true
    }
  },
  "source": {
    "include": ["."],
    "includePattern": "\\.(js|ts)$",
    "excludePattern": "node_modules|plugin_packages|public|dist|tests"
  },
  "tags": {
    "allowUnknownTags": ["category", "subcategory", "optional"]
  },
  "plugins": [
    "node_modules/better-docs/category",
    "node_modules/better-docs/typescript"
  ]
}
